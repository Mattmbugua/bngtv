<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_home"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/background_home">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingLeft="5dp"
                android:paddingTop="0dp"
                android:paddingBottom="15dp">

                <ImageView
                    android:id="@+id/IconMenu"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/menu_icon" />

                <ImageView
                    android:id="@+id/IconLogo"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/IconMenu"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:scaleType="center"
                    android:src="@mipmap/loginlogo456" />

                <TextView
                    android:id="@+id/Seriestxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/IconLogo"
                    android:paddingLeft="45dp"
                    android:paddingTop="10dp"
                    android:text="Series"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/Musictxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Seriestxt"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Music"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/Mycollectiontxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Musictxt"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="My Collection"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Relati"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/vacationSongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="100dp"
                    android:text="VACATION SONGS"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Romantictxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vacationSongs"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="100dp"
                    android:text="ROMANTIC"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addPlaylist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Romantictxt"
                    android:drawableTop="@drawable/add"
                    android:padding="25dp"
                    android:text="Add to playlist"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/playYoutube"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_below="@+id/Romantictxt"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/addPlaylist"
                    android:background="@drawable/round"
                    android:drawableStart="@drawable/playtubeziko"
                    android:drawableLeft="@drawable/playtubeziko"
                    android:padding="3dp"
                    android:text="play"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/infortxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Romantictxt"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="-3dp"
                    android:layout_toRightOf="@+id/playYoutube"
                    android:drawableTop="@drawable/infor"
                    android:padding="25dp"
                    android:text="Infor"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/txt_discover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discover New"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@+id/txt_discover"
                        android:src="@drawable/home1" />

                    <ImageView
                        android:id="@+id/img_headphones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_toRightOf="@+id/img_home"
                        android:src="@drawable/headset" />


                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_recycler1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">


                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/txt_discover2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Popular"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_home2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="105dp"
                        android:layout_toRightOf="@+id/txt_discover2"
                        android:src="@drawable/home1" />

                    <ImageView
                        android:id="@+id/img_headphones2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_toRightOf="@+id/img_home2"
                        android:src="@drawable/headset" />


                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_recycler2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">


                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/txt_discover3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suggested"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_home3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="98dp"
                        android:layout_toRightOf="@+id/txt_discover3"
                        android:src="@drawable/home1" />

                    <ImageView
                        android:id="@+id/img_headphones3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_toRightOf="@+id/img_home3"
                        android:src="@drawable/headset" />


                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_recycler3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">


                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>








        </LinearLayout>


    </ScrollView>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_home"
        app:itemIconTint="@drawable/selector1"
        app:menu="@menu/bottom_menu" />
</RelativeLayout>


